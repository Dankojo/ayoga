<footer class="panel color_4 dark text_center" style="background-color: {{global.footer_background_color}}">
	<div class="panel_body">
		<div class="footer__wrapper">
			<div class="credits">{{global.footer_text}}</div>
			<div class="footer__sosial">
				{{#each global.social}}
				<a class="footer__link social" href="{{link}}">
					<div class="social_icon">
						<i class="fa fa-{{icon}}"></i>
					</div>
				</a>
				{{/each}}
			</div>
		</div>
	</div>
</footer>