{{#> body}}

<div class="panel">
	<div class="panel_body">
		<h1 class="h1">
			{{name}}
			<span class="heading-border"></span>
		</h1>
		<h2>{{specialty}}</h2>
		<p>{{background}}</p>
	</div>
	<div class="wedge-3x"></div>

	<div class="workshops">
		<div class="panel_body">
			{{#list_tags tags workshops}} {{#each this}}
			<div class="workshops__type">
				<h2>{{name}}</h2>
			</div>
			<div class="workshops__content">
				<div class="cards">
					{{#each items}}
					<div class="card">
						<div class="card-workshop">
							<div class="card-workshop__date">Dato: {{date}}</div>
							<div class="card-workshop__image" style="background-image: url('{{image}}')">
								{{#if image}} {{else}} {{title}} {{/if}}
							</div>
							<div class="card-workshop__wrap">
								<div class="card-workshop__title">
									<h3 class="h3">{{title}}</h3>
								</div>
								<div class="card-workshop__content">
									{{description}}
								</div>
								<div class="card-workshop__bottom">
									<div class="card-workshop__info">{{price}}</div>
									<div class="card-workshop__info">{{meta_info}}</div>
								</div>
							</div>
						</div>
					</div>
					{{/each}}
				</div>
			</div>
			{{/each}} {{/list_tags}}
		</div>
	</div>
</div>

{{/body}}